{
  "name": "kioskops-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": { "node": ">=20" },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 8787",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 8787",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"**/*.{ts,js,css,html,json,md,yml,yaml}\"",
    "format:write": "prettier --write \"**/*.{ts,js,css,html,json,md,yml,yaml}\"",
    "stylelint": "stylelint \"src/**/*.{css}\"",
    "htmlhint": "htmlhint \"index.html\"",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "qa:integrity": "tsx tools/integrity_check.ts",
    "release:pack": "tsx tools/release_pack.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "archiver": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.0.0",
    "htmlhint": "^1.1.4",
    "prettier": "^3.3.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
